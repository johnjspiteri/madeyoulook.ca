.filter
	float left
	width 280px
	margin 0 0 28px 20px

	&__square
		float left
		width 260px
		padding 18px 0 20px 20px
		margin 28px 0 0 0
		border-radius: 4px
		//background #bcb

	&__select
		float left
		width 240px
		padding 0
		margin 0 0 12px 0

	&__title
		float left
		width 100%
		padding 0
		margin 0 0 10px 0

		h5
			float left
			width: 100%
			padding: 0
			margin 0
			font-family "mr-eaves-xl-modern", sans-serif
			font-weight 600
			font-size 18px
			line-height 18px
			color $paragraph
			text-align center

	&__value
		float left
		width 100%
		padding 0
		margin 0
		text-align center

		select
			float left
			width 240px
			height 48px
			padding 0
			margin 0
			font-size 22px
			line-height 54px
			font-family "factoria", sans-serif
			font-weight 600
			background $white
			border none
			border-radius: 4px
			text-align: center

	&__mask
		position absolute
		width 240px
		height 46px
		padding 0
		margin 0
		background: $white
		//border $input-border
		border-radius 4px
		cursor: pointer
		outline none
		pointer-events none
		z-index 888

		h4
			float left
			width 100%
			padding 0
			margin 0
			font-weight 600
			color $black
			font-size 24px
			line-height 46px
			text-align center

			span
				float right
				margin 0 10px 0 0

			.fa-caret-down
				font-size 20px
				line-height 46px

	&__filter
		float left
		width 240px
		margin 0
		padding 0

		input
			float left
			width: 240px
			height 46px
			font-size 24px
			line-height 46px
			font-family "factoria", sans-serif
			font-weight 600
			text-align: center
			color #767676
			background $white
			border none
			//border $black-border
			border-radius 4px


	&__tags
		float left
		width 100px
		height 20px
		padding 0 0 0 90px

	&__tag
		float left
		width 98px
		padding 0 10px
		margin -1px 0 0 0
		color $white
		background $black
		border $input-border
		border-top none
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-size 17px
			line-height 30px
			font-family: "le-monde-livre-classic-byol",serif;
			color $white

		.fa-plus
			float left
			width 20px
			font-size 20px
			line-height 39px

	&__reset
		float left
		width 40px
		height 30px
		padding 0
		margin -1px 0 0 31px
		color $white
		background $black
		border $input-border
		border-top none
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-family: "le-monde-livre-classic-byol",serif;
			font-size 16px
			line-height 30px

			span
				display none
				float right
				width: 38px
				height 30px
				padding 0
				margin -1px 0 0 -10px

			.fa-close
				font-size 20px
				line-height 30px