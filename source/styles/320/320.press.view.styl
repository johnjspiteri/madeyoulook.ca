.press-view
	float left
	width 320px
	margin 20px 0 0 0

	&__container
		position relative
		width 320px
		margin 0 auto

	&__heading
		float left
		width 300px
		margin 0 0 0 10px
		text-align center

		h1
			width 100%
			font-size 32px

	&__content
		float left
		width 298px
		padding 10px
		margin 0 0 15px 0
		background $white
		border $black-border
		text-align center

		p
			float left
			font-size 18px
			line-height 25px

	&__video
		float left
		width 320px
		height 180px
		background grey
		text-align center
		margin 0 0 15px 0

	&__article
		float left
		width 320px
		height 200px
		background grey
		text-align center
		margin 0 0 15px 0

	&__details
		float left
		width 100%
		margin 0 0 15px 0
		text-align center

	&__row
		float left
		width 100%

	&__row-mobile
		float left
		width 100%

	&__square
		float left1
		display inline-block

	&__square.right
		float right

	&__square-large
		float none
		position relative
		display none
		margin 0 7px
		vertical-align top

	&__title
		position relative
		text-align center
		width 100%

		h6
			margin 0 0 4px 0
			float left
			width auto
			padding 0 8pxpx
			font-size 16px
			border-bottom $black-border


	&__value
		float left
		padding 0 16px
		margin 0 0 5px 0
		height 40px
		background #444
		border-bottom 2px solid #000
		border-radius 4px
		text-align center

		h6
			float left
			width 100%
			font-size 16px
			line-height 40px
			color $white

	&__value.right
		float right

	&__value.icon
		float right
		margin 0 0 0 4px
		padding 0 4px

	&__value-mobile
		float left
		position relative
		display inline-block
		padding 0 16px
		margin 0 0 5px 0
		height 40px
		background #444
		border-bottom 2px solid #000
		border-radius 4px
		text-align center

		h6
			float left
			width 100%
			font-size 16px
			line-height 40px
			color $white

	&__value-mobile.right
		float right

	&__value-large
		position relative
		display none
		padding 0 16px
		margin 0
		height 40px
		background #444
		border-bottom 2px solid #000
		border-radius 4px
		text-align center

		h6
			float left
			width 100%
			font-size 16px
			line-height 40px
			color $white

	&__icons
		position relative
		display inline-block
		.fa-twitter
		.fa-google-plus
		.fa-pinterest-p
		.fa-envelope
			margin 0 4px
			color $white
			font-size 18px
			line-height 40px

	&__icons-large
		position relative
		display none
		height 40px

		.fa-twitter
		.fa-google-plus
		.fa-pinterest-p
		.fa-envelope
			margin 0 4px
			color $white
			font-size 18px
			line-height 40px