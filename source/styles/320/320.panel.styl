md-sidenav.md-closed
	display none

md-sidenav
	position fixed
	-webkit-flex-direction column
	-ms-flex-direction column
	flex-direction column
	width 320px
	max-width 320px
	height 100%
	min-height 100%
	bottom 0
	background none
	outline none
	overflow none
	box-sizing border-box
	left 0
	top 0
	z-index 999999
	-webkit-transform translate3d(0%, 0, 0)
	transform translate3d(0%, 0, 0)
	overflow hidden

md-sidenav.md-closed
	-webkit-transform translate3d(-100%, 0, 0);
	transform translate3d(-100%, 0, 0);

md-sidenav.md-closed-remove
	display -webkit-flex;
	display -ms-flexbox;
	display flex;
	transition all 1s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-closed-add.md-closed-add-active, md-sidenav.md-closed-remove.md-closed-remove-active
	transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-locked-open-add,
md-sidenav.md-locked-open-remove
	position: static;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-transform: translate3d(0, 0, 0);
	transform: translate3d(0, 0, 0);

.mobile
	float left
	width 179px
	height 100%
	padding 18px 27px 0 23px
	margin 0
	background #2E3A44
	border-right $black-border

	&__tile
		float left
		width 178px
		height 50px
		padding 0
		margin 0 0 15px 0
		background $accent
		//border $tile-border
		border-radius 4px
		cursor pointer
		outline none
		text-align center

		h4
			padding 0
			margin 0
			font-size 22px
			line-height 54px
			font-family 'factoria', sans-serif
			font-weight 700
			color $white
			text-shadow $white-shadow
			outline none
			text-align center

	&__tile.active
		background #DC9D41
		border-bottom none

		h4
			color $black
			text-shadow $black-shadow

	&__close
		float left
		width 34px
		height 52px
		padding 0 4px 0 0
		margin 16px 0 0 -1px
		background #2E3A44
		border $black-border
		border-left none
		border-radius 0 2px 2px 0
		cursor pointer
		outline none

		.fa-close
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 26px
			line-height 50px
			color $white
			text-align center
			cursor pointer