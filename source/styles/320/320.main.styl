.main
	position relative
	float left
	width 100%
	z-index 2

	&__holder
		position relative
		width 320px
		margin 0 auto

	&__spacer
		width 100%
		height 569px
		margin 0 0 70px 0

	&__banner
		float left
		width 280px
		padding 10px 20px
		margin 0 0 30px 0
		background $white

		h1
			float: left
			width: 220px
			padding 0
			margin 0
			font-weight 700
			font-family: "le-monde-livre-classic-byol",serif;
			font-style italic
			font-size 21px
			line-height 30px
			color: $black
			text-align: left

	&__squares
		float left
		width 300px
		padding 0 0 30px 0
		margin 0 0 0 10px

	&__square
		float left
		width 260px
		padding 20px 20px 24px 20px
		margin 0 0 18px 0
		background #f8f8f8
		border-radius 4px

		h1
			float: left;
			width 100%
			padding 0
			margin 0 0 10px 0
			font-family: "le-monde-livre-classic-byol",serif;
			font-weight 700
			font-size 26px
			line-height 26px
			text-align: center

		p
		li
			float: left;
			width: 100%
			font-family: "halyard-micro",sans-serif;
			font-weight 500
			font-size 16px
			line-height 25px
			color: $paragraph
			text-align: center

.search
	display none

