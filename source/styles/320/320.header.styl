header
	float left
	width 100%
	padding 0
	margin 0
	z-index 2

.header
	position relative
	float none
	width 320px
	padding 0 0 8px 0
	margin 0 auto 0 auto
	border-top none
	background #2E3A44
	z-index 900

	&__socials-bar
		float left
		width 100%
		padding 2px 0 0 0
		height 22px
		background #fffefa

	&__icons
		float right
		padding 0 0 0 0

	&__icon
		float right
		margin 0 14px 0 0

		.fa-pinterest
			width 100%
			font-size 20px
			color $black

		.fa-facebook
			width 100%
			margin 0 0 0 0
			font-size 17px
			color $black

		.fa-instagram
			width 100%
			font-size 20px
			color $black

		.fa-twitter
			width 100%
			margin 1px 0 0 0
			font-size 18px
			color $black

		.fa-phone
			width 100%
			margin 1px 0 0 0
			font-size 17px
			color $black

		.fa-map-marker
			width 100%
			margin 1px 0 0 0
			font-size 17px
			color $black

	&__phone
		float right
		margin 0 20px 0 0

		h6
			float right
			margin 0 0 0 -5px
			display inline-block
			font-family "halyard-micro",sans-serif
			font-weight 600
			font-size 15px
			line-height 20px

	&__hours
		display none

	&__address
		display none

	&__nav
		float left
		width 300px
		padding 10px 10px 8px 10px
		background #2E3A44

	&__logo
		float left
		width 170px
		height 46px
		margin 0
		background #9D9599
		border-radius 4px

		p
			float left
			width 100%
			font-size 20px
			line-height 46px

	&__empty
		float left
		width 160px
		height 30px
		background #B8B6B3

		p
			font-size 14px
			line-height 15px

	&__navigation-icon
		float right
		width 36px
		height 36px
		margin 5px 0 0 10px
		background $accent
		border-radius 4px
		text-align center

		span
			line-height 36px

	&__search-icon
		float right
		width 36px
		height 36px
		margin 5px 0 0 0
		background $accent
		border-radius 4px
		text-align center

		span
			line-height 36px

	&__rows
		display none
		float left
		width 133px
		height 87px
		margin 0 0 0 10px

	&__row.top
		float left
		width 100%
		height 35px
		margin 0 0 9px 0

	&__location
		float left
		width 290px
		height 35px
		margin 0 0 0 0
		background #71E29E
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__contact
		float left
		width 210px
		height 35px
		margin 0 0 0 15px
		background #90A9F1
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__row.bottom
		float left
		width 100%
		height 43px
		margin 0 0 0 0

	&__search
		float left
		margin 0
		background #E98A61
		border $black-border
		border-radius 4px
		display none

	&__input
		float left
		width 310px
		height 41px

		input
			background $white
			outline none
			border none
			border-radius 4px
			width 260px
			height 100%
			padding 0 0 0 50px

	&__submit
		position absolute
		float none
		width 30px
		height 41px
		padding 0 5px
		background #443E49

		.fa-search
			font-size 20px
			line-height 20px
			color $white

	&__navigation
		float right
		margin 0
		border-radius 0 0 4px 0
		display none

	&__tile
		float left
		height 43px
		padding 0 16px
		margin 0 12px 0 0
		background #E82C4D
		text-align center

		p
			float left
			width 100%
			font-size 17px
			line-height 43px

	&__tile.last
		margin 0