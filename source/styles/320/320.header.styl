header
	position relative
	width 100%
	padding 0
	margin 0 auto
	background #7b7276
	z-index 8888

.header
	width 100%
	height 107px
	padding 0
	margin 0 auto
	background $white
	text-align center

	&__container
		position relative
		display inline-block
		width 298px
		height 86px
		padding 10px 10px
		margin 0
		background #E2DAD5
		border $black-border
		border-top none

	&__logo
		float left
		width 160px
		height 46px
		margin 0
		background #3970F4
		text-align center

		p
			float left
			width 100%
			font-size 20px
			line-height 46px

	&__hours
		float left
		width 128px
		height 46px
		margin 0 0 10px 10px
		background white
		text-align left

		p
			width 100%
			font-size 11px
			line-height 15px

	&__empty
		float left
		width 160px
		height 30px
		background #B8B6B3

		p
			font-size 14px
			line-height 15px

	&__navigation-icon
		float right
		width 30px
		height 30px
		margin 0 0 0 15px
		background blue

		span
			line-height 30px

	&__search-icon
		float right
		width 30px
		height 30px
		background green

		span
			line-height 30px

	&__rows
		display none
		float left
		width 133px
		height 87px
		margin 0 0 0 10px

	&__row.top
		float left
		width 100%
		height 35px
		margin 0 0 9px 0

	&__location
		float left
		width 290px
		height 35px
		margin 0 0 0 0
		background #71E29E
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__contact
		float left
		width 210px
		height 35px
		margin 0 0 0 15px
		background #90A9F1
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__row.bottom
		float left
		width 100%
		height 43px
		margin 0 0 0 0

	&__search
		float left
		margin 0
		background #E98A61
		border $black-border
		border-radius 4px


	&__input
		float left
		width 310px
		height 41px


		input
			background $white
			outline none
			border none
			border-radius 4px
			width 260px
			height 100%
			padding 0 0 0 50px

	&__submit
		position absolute
		float none
		width 30px
		height 41px
		padding 0 5px
		background #443E49

		.fa-search
			font-size 20px
			line-height 20px
			color black



	&__navigation
		float right
		margin 0
		border-radius 0 0 4px 0

	&__tile
		float left
		height 43px
		padding 0 16px
		margin 0 12px 0 0
		background #E82C4D
		text-align center

		p
			float left
			width 100%
			font-size 17px
			line-height 43px

	&__tile.last
		margin 0