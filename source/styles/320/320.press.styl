.press
	float left
	width 320px
	margin 20px 0 0 0

	&__container
		position relative
		width 320px
		margin 0 auto

	&__grid
		float left
		width 320px

	&__square
		float left
		width 318px
		margin 0 0 20px 0
		background $white
		border $black-border
		border-radius 4px

	&__image
		float left
		width 100%
		height 200px
		background grey
		border-radius 4px 4px 0 0

	&__detail
		float left
		width 308px
		padding 10px 0 10px 10px
		border-radius 0 0 4px 4px

	&__title
		float left
		width 298px
		margin 0 0 3px 0
		text-align center

		h2
			width 100%
			font-size 20px

	&__date
		float left
		width 298px
		margin 0 0 10px 0
		text-align center

		h5
			width 100%
			font-size 14px

	&__publication
		float left
		width 298px
		margin 0 0 10px 0
		text-align center

		h3
			width 100%
			font-size 18px

		h5
			width 100%
			font-style italic
			font-weight 400
			font-size 14px

	&__link
		display inline-block
		background $accent
		border-radius 1000px
		width 27px
		height 27px
		margin 0 0 2px 0

		.fa-link
			color $white
			font-size 17px
			line-height 28px

	&__icons
		float left
		width 298px
		text-align center

	&__icon
		display inline-block
		margin 0 10px

		.fa-twitter
		.fa-google-plus
		.fa-pinterest-p
		.fa-envelope
			font-size 17px