.press
	float left
	width 320px
	margin 20px 0 0 0

	&__container
		position relative
		width 320px
		margin 0 auto

	&__grid
		float left
		width 300px
		margin 0 0 0 10px

	&__square
		float left
		width 298px
		margin 0 0 20px 0
		background $white
		border $black-border
		border-radius 4px

	&__image
		float left
		width 100%
		height 200px
		background grey
		border-radius 4px 4px 0 0

	&__detail
		float left
		width 278px
		padding 15px 10px 0 10px
		border-radius 0 0 4px 4px

	&__heading
		float left
		width 100%
		margin 0 0 15px 0
		text-align center

		h2
			width 100%
			font-size 20px
	&__row
		float left
		width 100%
		margin 0 0 15px 0

	&__field
		float left
		width 50%

	&__title
		width 100%
		text-align center

	&__center
		display inline-block
		margin 0 0 4px 0
		text-align center

		h5
			float left
			padding 0 8px 6px 8px
			margin 0
			font-size 14px
			line-height 14px
			color $black
			border-bottom 2px solid $black

	&__value
		float left
		width 100%
		margin 0 0 5px 0
		text-align center

		h4
			width 100%
			font-size 16px
			line-height 16px

	&__icons
		float none
		display inline-block
		text-align center

	&__icon
		float left
		margin 0 3px
		padding 0 7px
		height 24px
		background #444
		border-bottom 2px solid #000
		border-radius 4px
		text-align center

		.fa-twitter
		.fa-google-plus
		.fa-pinterest-p
		.fa-envelope
			font-size 15px
			color $white
			line-height 24px

