.product-view
	float left
	width 100%

	&__container
		position relative
		float none
		width 300px
		padding 20px 10px 0 10px
		margin 0 auto

	&__images
		float left
		width 300px
		margin 0 10px 30px 0

	&__image
		float left
		width 230px
		height 205px
		margin 0 10px 10px 0
		background #A8000E
		text-align center

	&__thumbnails
		position relative
		display inline-block
		height 60px
		padding 0

	&__thumbnail
		width 60px
		height 60px
		margin 0 0 12px 0
		background #FF001C

	&__information
		float left
		width 300px
		margin 0 10px 30px 0
		text-align center

	&__title
		float left
		width 200px
		height 80px
		margin 0
		background #224D23
		text-align center

	&__price
		float left
		width 100px
		height 50px
		margin 0
		background #358033
		text-align center

	&__share
		float right
		width 100px
		height 30px
		margin 0 0 15px 0
		padding 0
		background: #6fa256

	&__icon
		display inline-block
		float left
		width 28px
		height 28px
		margin 0 0 0 5px
		background: #7eb871
		border-radius 1000px

	&__table
		float left
		width 100%
		height 120px
		margin 0 0 10px 0
		background #C9DF8F

	&__detail
		float left
		width 100%
		margin 0 0 10px 0
		background #F0F7DB

	&__jeweller
		float left
		width 280px
		padding 12px 10px 12px 10px
		background #DFEDFB

	&__avatar
		float left
		width 86px
		height 86px
		margin 0 7px 19px 0
		background #280EFA
		border-radius 1000px

	&__name
		float left
		width 187px
		height 43px
		margin 0 0 10px 0
		background #006CF6

	&__socials
		float left
		width 157px
		height 30px
		margin 0 0 12px 0

	&__social
		float left
		width 30px
		height 30px
		margin 0 15px 0 0
		background #00A1FB
		border-radius 1000px

	&__description
		float left
		width 100%
		height 200px
		background #00D3FC