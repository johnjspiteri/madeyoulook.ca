.designers
	float left
	width 310px
	margin 30px 0 0 10px

	&__square
		float left
		width 298px
		padding 0
		margin 0 0 20px 0
		border $black-border
		border-radius 4px

	&__profile
		float left
		width 80px
		height 100%
		padding 10px
		margin 0

	&__picture
		float left
		width 78px
		height 116px
		padding 0
		margin 0
		background $white
		border $black-border

		img
			float left
			width 100%
			height 100%

	&__details
		float left
		width 197px
		padding 10px 0 5px 0
		background white
		border-left 1px solid black

	&__row
		float left
		width 187px
		padding 0 0 0 10px
		margin 0 0 5px 0

	&__name
		float left
		width 123px

	&__socials
		float left

	&__social
		float left
		width 22px
		height 22px
		margin 0 10px 0 0
		text-align center

		.fa-facebook
			font-size 20px
			margin 3px 0 0 0

		.fa-instagram
			font-size 25px
			margin 1px 0 0 0

	&__school
		float left
		width 177px
		margin 0 0 3px 0

		h5
			float left
			width 100%
			text-decoration underline
			font-size 14px
			line-height 18px

		h6
			float left
			width 174px
			margin 0 0 0 3px
			font-weight 400
			font-style italic
			font-size 12px
			line-height 18px

	&__specialties
		float left
		width 100%

	&__specialty
		float left
		padding 3px 7px
		margin 0 10px 6px 0
		background white
		border-radius 4px
		border $black-border

		h3
			float left
			font-weight 600
			font-size 14px
			line-height 14px

	&__description
		float left
		width 177px

		p
			float left
			font-size 15px
			line-height 18px


.designer
	float left
	width 100%

	&__container
		position relative
		float none
		width 320px
		margin 0 auto

	&__view
		float left
		width 100%
		padding 15px 0 0 0

	&__images
		float left
		width 100%
		margin 0 0 20px 0

	&__headshot
		float left
		width 100%
		height 244px
		padding 0
		margin 0 0 10px 0
		background #f2a
		text-align center

		h4
			width 100%
			margin 0 0 10px 0
			font-size 20px
			line-height 244px

		img
			float left
			width 100%

	&__thumbnails
		float left
		width 310px
		padding 0 0 0 10px
		margin 0
		height 70px
		text-align center

	&__thumbnail
		position relative
		display inline-block
		float none
		width 70px
		height 70px
		margin 0 10px 0 0
		background #535

		h4
			float left
			width 100%
			color $white
			font-size 10px
			line-height 70px

	&__information
		float left
		width 310px
		padding 10px 0 0 10px
		margin 0 0 20px 0
		background #ff9

	&__name
		float left
		width 300px
		padding 0
		margin 0 0 4px 0

		h1
			float left
			padding 0
			margin 0
			width 100%
			font-size 27px

	&__quote
		float left
		width 300px
		padding 0
		margin 0 0 15px 0
		text-align left

		h3
			float left
			width 100%
			padding 0
			margin 0
			font-style italic
			font-size 14px
			line-height 20px

	&__socials
		float left
		width 310px
		padding 0
		margin 0 0 15px 0

	&__social
		float left
		width 92px
		height 45px
		margin 0 9px 0 0
		background $white
		border $black-border
		border-radius 4px
		text-align center

		h6
			float left
			width 100%
			padding 0
			margin 0
			font-size 15px
			line-height 45px

	&__biography
		float left
		width 300px
		padding 0
		margin 0 0 20px 0

		h5
			float left
			width 100%
			font-size 14px
			line-height 22px

	&__certificates
		float left
		width 310px
		padding 10px 0 0 10px
		margin 0 0 10px 0
		background #3bbd80

		h1
			float left
			width 100%
			margin 0 0 10px 0
			font-size 20px
			line-height 20px

	&__certificate
		float left
		width 278px
		padding 5px 10px
		margin 0 0 10px 0
		border $black-border
		border-radius 4px
		background $white
		text-align left

		h4
			float left
			width 100%
			font-size 13px
			line-height 20px

		h5
			float left
			width 100%
			font-size 12px
			line-height 23px

	&__items
		float left
		width 320px
		padding 0
		margin 0

	&__item
		float left
		width 320px
		height 190px
		margin 0 0 20px 0
		background #abcdef
		border-radius 4px
		text-align center

		h4
			float left
			width 100%
			font-size 30px
			line-height 190px
