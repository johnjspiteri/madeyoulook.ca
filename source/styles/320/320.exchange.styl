.exchange
	position relative
	width 320px
	margin 0 auto

	&__document
		float left
		width 300px
		padding 28px 10px 0 10px
		margin 0
		border-radius: 0

		h1
			float left
			width 100%
			margin 0 0 20px 0
			font-weight 400
			font-size 27px
			line-height 27px
			color $black
			text-align center

		h3
			position relative
			width 228px
			padding 5px 0
			margin 0 auto 28px auto
			font-size 14px
			line-height 14px
			font-family 'soleil', sans-serif
			font-weight 400
			color $black
			text-align center

		p
			float left
			width 100%
			margin 0
			font-family 'soleil', sans-serif
			font-weight 400
			font-size 18px
			line-height 28px
			color $paragraph
			text-align center

	&__row
		float left
		width 100%
		margin 0 0 14px 0

	&__container
		margin 0 0 20px 0
		text-align left

	&__center
		display inline-block
		position relative
		margin 0
		z-index 99

	&__points
		float left
		width 100%
		padding 0
		margin 0 0 20px 0

	&__point
		float left
		width 280px
		padding 10px
		margin 0 0 10px 0
		background $black
		border-radius 4px

		h2
			padding 0
			margin 0
			font-weight 400
			font-size 19px
			line-height 29px
			color $white
			text-align left