

.questions
	float left
	width 100%

	&__holder
		position relative
		width 310px
		margin 20px auto 0 auto
		padding 0 0 0 10px

	&__select
		float left
		width 300px
		padding 0
		margin 0 0 24px 0

		input
			float left
			width 298px
			height 50px
			padding 0
			margin 0
			font-weight 500
			font-size 23px
			line-height 53px
			background $white
			border $black-border
			border-radius 4px

	&__select.filter
		margin 0 0 20px 0
		padding 0

	&__container
		width 300px
		text-align center
		margin 0

	&__center
		display inline-block
		margin 0 0 8px 0

		h5
			float left
			padding 0 8px 6px 8px
			margin 0
			color $black
			font-weight 400
			font-size 17px
			line-height 17px
			border-bottom 3px solid $accent
			text-shadow $black-shadow

	select
		float left
		width 300px
		height 50px
		padding: 0
		margin: 0
		font-weight 500
		font-size 23px
		line-height 53px
		background $white
		border $black-border
		border-radius 4px
		pointer-events: cursor
		z-index: 888888

	&__mask
		position absolute
		float left
		width 300px
		height 50px
		padding 0
		margin 0
		background: $white
		border $input-border
		border-radius 4px
		pointer-events: none
		z-index: 888

		h4
			float: left;
			width 300px
			height 50px
			padding 0
			margin 0
			font-size 23px
			line-height 53px
			font-family 'usual', sans-serif
			font-weight 500
			text-align center
			pointer-events none

	&__reset
		float left
		width 298px
		height 28px
		padding 10px 0
		margin 0
		background $accent
		border $accent-border
		border-radius 4px
		cursor pointer

		.fa-close
			float left
			width 100%
			font-size 25px
			line-height 30px
			color $white
			text-align center


	&__squares
		float left
		width 100%

	&__square
		float left
		width 278px
		padding 10px
		margin 0 0 15px 0
		background $white
		border $black-border
		border-radius 4px

		h5
			display inline-block
			float left
			width 30px
			font-size 20px

		h6
			display inline-block
			float left
			width 248px
			font-weight 400
			font-size 16px
			line-height 28px

	&__question
		float left
		width 100%
		margin 0 0 5px 0

		h6
			font-weight 600
			font-style italic

	&__answer
		float left
		width 100%