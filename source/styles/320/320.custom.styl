.custom
	float left
	width 100%

	&__holder
		position relative
		width 300px
		margin 0 auto
		text-align center

	&__header
		float left
		width 300px
		padding 0
		margin 0

	&__detail
		float left
		width 280px
		padding 0
		margin 0 0 20px 10px

		p
			width 100%
			font-size 18px
			line-height 28px

	&__btn
		float left
		width 208px
		padding 10px 0
		margin 0 0 20px 45px
		background $black
		border $black-border
		border-radius 4px

		h2
			float left
			width 100%
			font-size 22px
			color $white

	&__form
		float left
		width 278px
		padding 18px 0 12px 20px
		margin 0 0 20px 0
		border $black-border
		border-radius 4px

	&__squaref
		float left
		width 258px
		margin 0 0 20px 0
		text-align center

		h4
			margin 0 0 5px 0

	&__value
		float left
		width 254px
		height 40px

		input
			float left
			width 100%
			height 36px
			border-radius 4px

		select
			float left
			width 258px
			height 40px
			background $white

		select.half
			width 124px

	&__squaref.half
		width 124px
		margin 0 10px 20px 0

	&__value.half
		width 120px

	&__message
		float left
		width 256px
		height 200px
		margin 0

		textarea
			width 100%
			height 100%
			border-radius 4px

	&__submit
		float left
		width 258px
		height 40px
		margin 0
		background $black
		border-radius 4px
		text-align center

		h5
			font-size 20px
			line-height 38px
			color $white