.questions
	float left
	width 1024px
	margin 0 0 0 10px

	&__filter
		float left
		width 640px
		padding 0 0 0 202px

	&__search
		float left
		width 300px
		margin 0 20px 30px 0px

	&__title
		float left
		width 100%
		text-align center

		h1
			float left
			width 100%
			font-size 30px
			line-height 30px

	&__value
		float left
		width 100%
		border $black-border
		border-radius 4px

		select
			width 300px
			height 46px
			padding 0 15px
			margin 0
			font-size 20px
			line-height 46px
			border-radius 4px

		input
			width 266px
			height 46px
			padding 0 15px
			margin 0
			font-size 20px
			line-height 46px
			border-radius 4px

		.fa-caret-down
		.fa-search
			position absolute
			padding 0 20px
			margin 0 0 0 -63px
			font-size 25px
			line-height 50px
			color $white
			background $black

	&__squares
		float left
		width 1044px

	&__square
		float left
		width 306px
		padding 10px
		margin 0 20px 0 0
		background $white
		border $black-border
		border-radius 4px

		h6
			float left
			width 261px
			font-size 16px
			line-height 24px

	&__question
		float left
		width 100%
		margin 0 0 10px 0

	&__q
		float left
		width 35px
		margin 0 10px 0 0
		background $black
		border-radius 4px
		text-align center

		h5
			font-size 16px
			line-height 24px
			font-weight 400
			color $white

	&__a
		float left
		width 35px
		margin 0 10px 0 0
		background $black
		border-radius 4px
		text-align center

		h5
			font-size 16px
			line-height 24px
			font-weight 400
			color $white