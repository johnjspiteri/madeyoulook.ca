.video
	position relative
	width 100%
	height 500px
	background #7b7276

.search
	position absolute
	width 273px
	padding 15px 0 5px 25px
	margin 0 0 0 700px
	background white
	border $black-border
	border-radius: 4px;
	z-index: 888

	&__title
		float left
		width 250px
		margin 0 0 15px 0
		text-align center

		h2
			float left
			width 100%
			font-size 25px
			line-height 25px

	&__row
		float left
		width 250px
		margin 0 0 15px 0
		text-align center

		h4
			float left
			width 100%
			margin 0 0 7px 0
			font-size 17px
			line-height 17px

		input
			float left
			width 248px
			height 46px
			font-size 20px
			line-height 46px
			border $white-border
			border-radius 4px
			text-align center

	button.submit
		float left
		width 250px
		padding 15px 0
		margin 5px 0 0 0
		background #3BBD80
		border $background-border
		border-radius 4px

		h5
			float left
			width 100%
			font-size 18px
			line-height 18px
			color white
			text-align center

.main
	float left


	&__banner
		float left
		width 984px
		height 75px
		padding 0 20px
		margin 0 0 0 0
		background #DD7A64
		text-align center

		h1
			font-style italic


	&__squares
		float left
		width 1044px
		padding 0 0 30px 0
		margin 0

	&__square
		float left
		width 328px
		height 300px
		margin 0 20px 0 0
		background #76943e
		text-align center

		h1
			padding 0
			margin 0
			line-height 300px





