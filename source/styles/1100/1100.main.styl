.main
	float left
	width 100%

	&__holder
		width 1100px
		margin 0 auto

	&__video // aspect ratio: 5:3
		width 100%
		height 660px
		margin 0 0 20px 0
		border none

	&__banner
		width 1060px
		height 75px
		padding 0 20px
		margin 0 0 20px 0

		h1
			font-size 30px
			line-height 75px

	&__squares
		width 1080px
		padding 0 0 30px 0
		margin 0 0 0 20px

	&__square
		width 310px
		height 300px
		padding 0 15px
		margin 0 20px 15px 0

		h1
			font-size 24px
			line-height 24px

		p
		li
			font-size 17px
			line-height 21px

.search
	width 213px
	padding 15px 0 5px 25px
	margin 25px 0 0 860px
	background $background
	border-right none
	border-radius 4px 0 0 4px

	&__title
		width 200px
		margin 0 0 15px 0

		h2
			width 100%
			font-size 25px
			line-height 25px

	&__row
		width 210px
		margin 0 0 15px 0
		text-align center

		h4
			width 100%
			margin 0 0 7px 0
			font-size 17px
			line-height 17px

		input
			width 210px
			height 46px
			font-size 20px
			line-height 46px

	button.submit
		width 200px
		padding 15px 0
		margin 5px 0 0 0

		h5
			width 100%
			font-size 18px
			line-height 18px