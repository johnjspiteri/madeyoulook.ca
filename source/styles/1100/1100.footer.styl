footer
	position relative
	width 100%
	margin 0 0 0 0
	padding: 0
	bottom 0
	z-index: 1

.footer
	float left
	width 100%
	margin 0
	background #aaa
	border-top $primary-border

	&__row
		position relative
		clear both
		overflow: auto
		width 396px
		dislay inline-block
		padding 10px 0
		margin 0 auto
		z-index: 1
		text-align center

	&__logo
		float left
		width 175px
		padding 25px 0
		margin 0 35px 0 0
		background $background
		border-radius 4px
		text-align center

	&__button
		float left
		//width 50px
		height 100%
		padding 10px 0
		margin 0 10px 0 10px
		text-align center

		h1
			float left
			//width 100%
			padding 0
			margin 0
			font-family 'usual', sans-serif
			font-size 18px
			line-height 28px
			color $paragraph