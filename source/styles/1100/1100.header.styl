header
	position relative
	width 100%
	padding 0
	margin 0 auto
	background #7b7276
	z-index 8888

.header
	position relative
	display inline-block
	width 1060px
	height 86px
	padding 10px 20px
	margin 0
	background #E2DAD5
	border $black-border
	border-top none

	&__container
		width 100%
		height 107px
		padding 0
		margin 0 auto
		background $white
		text-align center

	&__logo
		float left
		width 200px
		height 80px
		margin 3px 0 0 0
		background #3970F4
		text-align center

		p
			float left
			width 100%
			font-size 20px
			line-height 80px

	&__rows
		float left
		width 840px
		height 79px
		margin 0 0 0 20px

	&__row.top
		float left
		width 100%
		height 35px
		margin 0 0 9px 0

	&__location
		float left
		width 290px
		height 35px
		margin 0 0 0 0
		background #71E29E
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__contact
		float left
		width 210px
		height 35px
		margin 0 0 0 15px
		background #90A9F1
		text-align center

		p
			float left
			width 100%
			font-size 16px
			line-height 35px

	&__row.bottom
		float left
		width 100%
		height 43px
		margin 0 0 0 0

	&__search
		float left
		margin 0
		background #E98A61
		border $black-border
		border-radius 4px


	&__input
		float left
		width 310px
		height 41px


		input
			background $white
			outline none
			border none
			border-radius 4px
			width 260px
			height 100%
			padding 0 0 0 50px

	&__submit
		position absolute
		float none
		width 30px
		height 41px
		padding 0 5px
		background #443E49

		.fa-search
			font-size 20px
			line-height 20px
			color black



	&__navigation
		float right
		margin 0
		border-radius 0 0 4px 0

	&__tile
		float left
		height 43px
		padding 0 16px
		margin 0 12px 0 0
		background #E82C4D
		text-align center

		p
			float left
			width 100%
			font-size 17px
			line-height 43px

	&__tile.last
		margin 0