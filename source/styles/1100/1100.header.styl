header
	position relative
	width 100%
	padding 0
	margin 0 auto
	background #7b7276
	z-index 8888

.header
	position relative
	width 1022px
	height 50px
	padding 10px 0
	margin 0
	background $white
	border $black-border
	border-top none
	border-radius 0 0 4px 4px
	z-index: 8;

	&__container
		position relative
		width 1022px
		height 70px
		padding 0
		margin 0 auto

	&__logo
		float left
		width 256px
		height 50px
		margin 0
		border-radius 0 0 4px 4px
		background #ff9
		text-align center

		p
			float left
			width 100%
			font-size 20px
			line-height 50px

	&__gap
		float left
		width 256px
		height 50px
		background #bcb

	&__navigation
		float left
		width 510px
		border-radius 0 0 4px 0

	&__tile
		float right
		width 50px
		height 48px
		margin 0 10px 0 0
		text-align center

		p
			float left
			width 100%
			font-size 20px
			line-height 50px