.press-view
	width 1100px
	margin 20px 0 0 0

	&__container
		width 1100px
		margin 0 auto

	&__heading
		width 1020px
		margin 0 0 0 40px

		h1
			font-size 32px

	&__content
		width 998px
		padding 10px
		margin 0 0 15px 40px

		p
			font-size 18px
			line-height 25px

	&__content.article
		width 488px
		margin 0 0 15px 0

	&__video
		width 1020px
		height 574px
		margin 0 0 15px 40px

	&__article
		width 495px
		height 200px
		margin 0 15px 15px 40px

	&__details
		margin 0 0 15px 0

		h6
			font-size 16px

	&__center
		margin 0 0 4px 0

		h6
			padding 0 8px 6px 8px
			font-size 16px
			line-height 16px

	&__value
		padding 0 16px
		margin 0 0 5px 0
		height 40px

		h6
			font-size 16px
			line-height 40px

	&__value.icon
		margin 0 0 0 4px
		padding 0 4px

	&__icons
		display inline-block

		.fa-twitter
		.fa-google-plus
		.fa-pinterest-p
		.fa-envelope
			margin 0 4px
			font-size 17px
			line-height 40px