.questions
	float left
	width 100%

	&__holder
		position relative
		width 360px
		padding 0 0 0 15px
		margin 20px auto 0 auto
		border-radius 4px

	&__container
		width 345px

	&__select
		width 345px
		margin 0 0 24px 0

		input
			width 343px
			height 48px
			font-size 23px
			line-height 53px

	&__select.filter
		margin 0 0 20px 0

	&__center
		display inline-block
		margin 0 0 8px 0

		h5
			padding 0 8px 6px 8px
			font-size 17px
			line-height 17px

	&__mask
		width 345px
		height 50px

		h4
			position absolute
			width 345px
			height 50px
			font-size 23px
			line-height 53px
			font-family 'usual', sans-serif

	select
		width 345px
		height 50px

	&__reset
		width 345px
		height 28px
		padding 10px 0

		.fa-close
			width 100%
			font-size 25px
			line-height 30px

	&__square
		width 323px
		padding 10px
		margin 0 0 15px 0

		h5
			width 30px
			font-size 20px

		h6
			width 293px
			font-size 16px
			line-height 28px

	&__question
		margin 0 0 5px 0