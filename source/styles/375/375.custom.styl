.custom
	float left
	width 100%

	&__holder
		position relative
		width 335px
		margin 0 auto
		text-align center

	&__header
		float left
		width 335px
		padding 0
		margin 0

	&__detail
		float left
		width 315px
		padding 0
		margin 0 0 20px 10px

	&__btn
		float left
		width 213px
		padding 10px 0
		margin 0 0 20px 60px
		background $black
		border $black-border

		h2
			float left
			width 100%
			font-size 22px
			color $white

	&__form
		float left
		width 313px
		padding 18px 0 12px 20px
		margin 0 0 20px 0
		border $black-border
		border-radius 4px

	&__squaref
		float left
		width 293px
		margin 0 0 20px 0
		text-align center

	&__title
		float left
		width 100%
		margin 0 0 5px 0
		text-align center

		h4
			width 100%

	&__value
		float left
		width 289px
		height 40px

		input
			float left
			width 100%
			height 36px
			border-radius 4px

		select
			float left
			width 293px
			height 40px
			background $white

		select.half
			width 139px

	&__squaref.half
		width 139px
		margin 0 15px 20px 0

	&__value.half
		width 135px

	&__message
		float left
		width 292px
		height 200px
		margin 0

		textarea
			width 100%
			height 100%
			border-radius 4px

	&__submit
		float left
		width 295px
		height 40px
		margin 0
		background $black
		border-radius 4px
		text-align center

		h5
			font-size 20px
			line-height 38px
			color $white