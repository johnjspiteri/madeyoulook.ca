.studio
	position relative
	width 375px
	margin 0 auto

	&__intro
		float left
		width 100%
		//height 400px
		margin 0 0 30px 0
		text-align center
		background #ff9

		h1
			margin 0
			line-height 400px

	&__tabs
		float left
		width 335px
		padding 0 0 0 20px
		margin 0 0 0 10px
		border-bottom $black-border
		background #f2f

	&__tab
		float left
		width 200px
		height 40px
		border $black-border
		border-bottom none
		border-radius 4px 4px 0 0
		text-align center

		h2
			font-size 23px
			line-height 40px

	&__content
		float left
		width 333px
		padding 18px 10px 10px 10px
		margin 0 0 0 10px
		border $black-border
		border-top none

		p
			margin 0 0 10px 0
			font-size 16px
			line-height 26px
			font-family 'usual', sans-serif
			font-weight 400

	&__large
		float left
		width 120px
		height 60px
		margin 0 14px 0 0
		background #ff9

	&__quote
		float left
		width 100%
		margin 0 0 10px 0
		text-align center

		h4
			float left
			font-size 20px
			line-height 20px

		h5
			float left
			width 314px
			font-size 17px
			line-height 25px
			font-weight 600

	&__medium
		float right
		width 100px
		height 50px
		margin 0 0 0 14px
		background #ff9

	&__small
		float left
		width 80px
		height 40px
		margin 0 14px 0 0
		background #ff9