.custom
	float left
	width 100%

	&__holder
		position relative
		width 627px
		margin 0 auto
		text-align center

	&__header
		float left
		width 627px
		padding 0
		margin 0

	&__detail
		float left
		width 627px
		padding 0
		margin 0 0 20px 0

	&__btn
		float left
		width 215px
		padding 10px 0
		margin 0 0 20px 205px
		background $black
		border $black-border

		h2
			float left
			width 100%
			font-size 22px
			color $white

	&__form
		float left
		width 395px
		padding 18px 0 12px 20px
		margin 0 0 20px 105px
		border $black-border
		border-radius 4px

	&__squaref
		float left
		width 375px
		margin 0 0 20px 0
		text-align center

	&__title
		float left
		width 100%
		margin 0 0 5px 0
		text-align center

		h4
			width 100%

	&__value
		float left
		width 371px
		height 40px

		input
			float left
			width 100%
			height 36px
			border-radius 4px

		select
			float left
			width 375px
			height 40px
			background $white

		select.half
			width 177px

	&__squaref.half
		width 177px
		margin 0 20px 20px 0

	&__value.half
		width 173px

	&__message
		float left
		width 373px
		height 200px
		margin 0

		textarea
			width 100%
			height 100%
			border-radius 4px

	&__submit
		float left
		width 375px
		height 40px
		margin 0
		background $black
		border-radius 4px
		text-align center

		h5
			font-size 20px
			line-height 38px
			color $white