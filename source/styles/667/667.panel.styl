md-sidenav
	width 667px
	max-width 667px

.mobile
	width 199px
	padding 18px 32px 0 28px

	&__tile
		width 198px
		height 50px
		margin 0 0 15px 0

		h4
			font-size 24px
			line-height 54px

	&__tile.active
		background $background
		border-bottom none

		h4
			color $black
			text-shadow $black-shadow

	&__close
		width 34px
		height 52px
		padding 0 4px 0 0
		margin 16px 0 0 -1px

		.fa-close
			font-size 27px
			line-height 50px

.require__panel
	width 118px
	padding 5px 10px
	margin 12px 0 0 30px

	h6
		font-size 19px
		line-height 19px

	.pointer
		width 20px
		margin 31px 0 0 49px

		.fa-caret-down
			font-size 30px