.main
	float left
	width 100%

	&__holder
		width 667px
		margin 0 auto

	&__video // aspect ratio: 5:3
		width 100%
		height 400px
		margin 0 0 20px 0

	&__banner
		width 627px
		height 75px
		padding 0 20px
		margin 0 0 20px 0

		h1
			font-size 27px
			line-height 75px


	&__squares
		width 648px
		padding 0 0 30px 0
		margin 0 0 0 19px

	&__square
		width 276px
		height 300px
		margin 0 18px 15px 0

		h1
			font-size 24px
			line-height 24px

		p
		li
			font-size 17px
			line-height 21px

.search
	display block
	position absolute
	width 273px
	padding 15px 0 5px 25px
	margin 20px 0 0 347px
	background white
	border $black-border
	border-radius: 4px;
	z-index: 888

	&__title
		float left
		width 250px
		margin 0 0 15px 0
		text-align center

		h2
			float left
			width 100%
			font-size 25px
			line-height 25px

	&__row
		float left
		width 250px
		margin 0 0 15px 0
		text-align center

		h4
			float left
			width 100%
			margin 0 0 7px 0
			font-size 17px
			line-height 17px

		input
			float left
			width 248px
			height 46px
			font-size 20px
			line-height 46px
			border $white-border
			border-radius 4px
			text-align center

	button.submit
		float left
		width 250px
		padding 15px 0
		margin 5px 0 0 0
		background #3BBD80
		border $background-border
		border-radius 4px

		h5
			float left
			width 100%
			font-size 18px
			line-height 18px
			color white
			text-align center