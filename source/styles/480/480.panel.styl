md-sidenav
	width 480px
	max-width 480px

.mobile
	width 189px
	padding 18px 32px 0 28px

	&__tile
		width 188px
		height 50px
		margin 0 0 15px 0

		h4
			font-size 23px
			line-height 54px

	&__tile.active
		background $background
		border-bottom none

		h4
			color $black
			text-shadow $black-shadow

	&__close
		width 34px
		height 52px
		padding 0 4px 0 0
		margin 16px 0 0 -1px

		.fa-close
			font-size 27px
			line-height 50px

.require__panel
	width 118px
	padding 5px 10px
	margin 13px 0 0 25px

	h6
		font-size 18px
		line-height 18px

	.pointer
		width 20px
		margin 29px 0 0 49px

		.fa-caret-down
			font-size 30px