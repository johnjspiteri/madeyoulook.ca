.filter
	width 720px
	padding 18px 10px 0 10px
	margin 0 0 28px 14px

	&__square
		width 240px
		padding 0
		margin 0 0 10px 0

	&__select
		width 230px
		margin 0 10px 0 0

	&__title
		width 100%

		h5
			font-size 18px
			line-height 18px

		h6
			font-size 14px
			line-height 14px

	&__value
		width 100%

		select
			width 220px
			height 48px
			font-size 19px
			line-height 21px

		input
			width 210px
			height 48px
			padding 0 5px
			font-size 19px
			line-height 21px

	&__mask
		width 220px
		height 48px
		margin -48px 0 0 10px

		h4
			width 148px
			padding 0 5px 0 36px
			font-size 19px
			line-height 21px

		.fa-caret-down
			width 31px
			margin 0 10px 0 0
			font-size 20px
			line-height 20px

