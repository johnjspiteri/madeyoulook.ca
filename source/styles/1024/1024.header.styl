header
	width 100%

.header
	width 1024px
	margin 0 auto 0 auto

	&__nav
		width 994px
		padding 10px 15px

	&__logo
		width 200px
		height 80px
		margin 3px 0 0 0

		p
			width 100%
			font-size 20px
			line-height 80px

	&__hours
		display inline-block
		float right
		margin 0 20px 0 0

		h6
			float right
			margin 0 0 0 10px
			display inline-block
			font-family "halyard-micro",sans-serif
			font-weight 600
			font-size 14px
			line-height 20px

	&__empty
		display none

	&__navigation-icon
		display none

	&__search-icon
		display none

	&__rows
		width 762px
		height 87px
		margin 0 0 0 20px

	&__row.top
		width 100%
		height 35px
		margin 0 0 9px 0

	&__location
		width 290px
		height 35px

		p
			width 100%
			font-size 16px
			line-height 35px

	&__contact
		width 210px
		height 35px
		margin 0 0 0 15px

		p
			width 100%
			font-size 16px
			line-height 35px

	&__row.bottom
		width 100%
		height 43px

	&__search
		display block

	&__input

		width 310px
		height 41px

		input
			width 260px
			height 100%
			padding 0 0 0 50px

	&__submit
		width 30px
		height 41px
		padding 0 5px

		.fa-search
			font-size 20px
			line-height 20px

	&__tile
		height 43px
		padding 0 16px
		margin 0 12px 0 0

		p
			width 100%
			font-size 17px
			line-height 43px

	&__tile.nav
		display none