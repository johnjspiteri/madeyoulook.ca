header
	width 100%

.header
	width 1024px
	margin 0 auto

	&__holder
		float left
		width 100%
		margin 0
		background $primary
		border-bottom 2px solid #222

	&__nav
		width 1024px
		margin 0 0 10px 0
		padding 0

	&__logo
		width 309px
		height 109px
		margin 10px 20px 0 7px

	&__information
		width 688px
		height 80px
		margin 0

	&__column
		float left
		width 185px
		height 80px
		padding 0 10px

	&__phone
		width 100%

		h5
			font-size 16px
			line-height 26px

		.fa-phone
			margin 1px 8px 0 0
			font-size 15px

	&__address
		width 100%

		h6
			font-size 15px
			line-height 26px

	&__hours
		width 125px
		height 80px
		padding 0 10px

		h6
			font-size 15px
			line-height 26px

	&__contact
		width 308px
		height 80px

	&__tiles
		float left
		display inline-block
		margin 20px 0 0 0
		width 688px

	&__tile
		padding 0 11px
		margin 0 14px 0 0

		p
			width 100%
			font-size 16px

	&__secondary
		height 36px

	&__links
		padding 0 0 0 10px
		margin 8px 0 0 0

	&__link
		width auto
		height 20px
		margin 0 10px 0 0

		p
			padding 0 15px
			font-size 16px
			line-height 20px

	&__tertiary
		height 36px

