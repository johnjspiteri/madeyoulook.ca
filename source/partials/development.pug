doctype html
html(lang='en' data-ng-app='app' data-ng-class='{"locked":panel}')
	head
		title(data-ng-bind='MetaTags.title')
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='author', content='Mini-Pool')
		meta(name='description', content='{{MetaTags.description}}')
		meta(data-ng-repeat='(key, value) in MetaTags.properties' property='{{key}}' content='{{value}}')
		meta(name="fragment" content="!")
		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=1')
		link(rel='stylesheet', href='/public/css/styles.css')
		include source.pug
		base(href='/')

	body
		div(data-ui-view='modal')
		div(data-ui-view='panel')
		.video(data-ui-view='video')
		div(data-ui-view='header')
		.page(data-ui-view='page')
		//div(data-ui-view='footer')
			
		script.
			document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js"></' + 'script>')