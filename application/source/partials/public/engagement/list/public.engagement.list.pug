.block
	.block__container
		.container
			.filter
				.filter__title
					h5 SEARCH
				.filter__square
					.filter__title
						h6 CATEGORY

					.filter__value
						select(data-ng-model='vm.category' data-ng-options='category for category in vm.search.category')

						.filter__mask
							h4 {{ vm.category }}
							span.fa.fa-caret-down

				.filter__square
					.filter__title
						h6 TYPE

					.filter__value
						select(data-ng-model='vm.type' data-ng-options='type for type in vm.search.type')

						.filter__mask
							h4 {{ vm.type }}
							span.fa.fa-caret-down

				.filter__square
					.filter__title
						h6 MATERIAL

					.filter__value
						select(data-ng-model='vm.material' data-ng-options='material for material in vm.search.material')

						.filter__mask
							h4 {{ vm.material }}
							span.fa.fa-caret-down

				.filter__square
					.filter__title
						h6 COLOR

					.filter__value
						select(data-ng-model='vm.color' data-ng-options='color for color in vm.search.color')

						.filter__mask
							h4 {{ vm.color }}
							span.fa.fa-caret-down

				.filter__square
					.filter__title
						h6 INPUT
					.filter__value
						input(data-ng-model='vm.input')

				.filter__square
					.filter__title
						h6 REFINE

					.filter__value
						select(placeholder='Chain Length')

						.filter__mask
							h4
							span.fa.fa-caret-down

.products
	.products__holder
		.product(data-ng-repeat='product in [{}, {}, {}, {}]')
			.product__image
				img(src='public/images/product.jpg')

			.product__unnamed
				h6 ?

			.product__detail
				.product__title
					h6 Title

					//.product__jeweller
				.product__collection
					h6 Category

				.product__price
					h6 Price
					//.product__specs

				.product__tags
					.product__tag(data-ng-repeat='tag in [{}, {}, {}]')
						h5 Tag

				.product__designer
					.product__picture
						img(src='public/images/jeweller.jpg')

					.product__name
						h5 Designer Name

					.product__view
						h6 View