.block
	.block__container
		.container
			.filter
				.filter__square
					.filter__title
						.filter__container
							.filter__center
								h6 Category

					.filter__value
						select(data-ng-model='vm.category' data-ng-options='category.title as category.title for category in vm.search.category')
						.filter__mask
							h4(data-ng-bind='vm.category')
							//span.fa.fa-caret-down

				.filter__square
					.filter__title
						.filter__container
							.filter__center
								h6 Type

					.filter__value
						select(data-ng-model='vm.type' data-ng-options='type for type in vm.category.types')
						.filter__mask
							h4(data-ng-bind='vm.type')
							//span.fa.fa-caret-down

				.filter__square(data-ng-show='!vm.compact')
					.filter__title
						.filter__container
							.filter__center
								h6 Material

					.filter__value
						select(data-ng-model='vm.material' data-ng-options='material for material in vm.search.material')
						.filter__mask
							h4(data-ng-bind='vm.material')
							//span.fa.fa-caret-down

				.filter__square(data-ng-show='!vm.compact')
					.filter__title
						.filter__container
							.filter__center
								h6 Designer

					.filter__value
						select(data-ng-model='vm.designer' data-ng-options='designer for designer in vm.search.designer')
						.filter__mask
							h4(data-ng-bind='vm.designer')
							//span.fa.fa-caret-down

				.filter__square(data-ng-show='!vm.compact')
					.filter__title
						.filter__container
							.filter__center
								h6 Style

					.filter__value
						select(data-ng-model='vm.designer' data-ng-options='designer for designer in vm.search.designer')
						.filter__mask
							h4(data-ng-bind='vm.designer')
							//span.fa.fa-caret-down

				.filter__square(data-ng-show='!vm.compact')
					.filter__title
						.filter__container
							.filter__center
								h6 Style

					.filter__value
						select(data-ng-model='vm.designer' data-ng-options='designer for designer in vm.search.designer')
						.filter__mask
							h4(data-ng-bind='vm.designer')
							//span.fa.fa-caret-down

				.filter__slider
					.filter__min
						span(data-ng-bind='vm.sliderRanges.price.min | currency:"$":0')
					.filter__title
						.filter__container
							.filter__center
								h6 Price
					.filter__max
						span(data-ng-bind='vm.sliderRanges.price.max | currency:"$":0')

					.filter__value
						div(range-slider, prevent-equal-min-max="false", attach-handle-values="", step="{{vm.sliderSettings.price.step}}",  min="vm.sliderSettings.price.min", max="vm.sliderSettings.price.max", model-min="vm.sliderRanges.price.min", model-max="vm.sliderRanges.price.max")

			.filter__tags
				.filter__tag(data-ng-show='vm.compact' data-ng-click='vm.toggle()')
					h5 More Options
					//.fa.fa-plus

				.filter__tag(data-ng-show='!vm.compact' data-ng-click='vm.toggle()')
					h5 Less Options
					//.fa.fa-minus

				.filter__reset(data-ng-click='vm.reset()')
					span.fa.fa-close

.block
	.block__container
		.container
			.products
				.products__holder
					.product(data-ng-repeat='product in [{}, {}, {}, {}]')
						.product__image
							img(src='public/images/product.jpg')

						.product__unnamed
							h6 ?

						.product__detail
							.product__title
								h6 Title

								//.product__jeweller
							.product__collection
								h6 Category

							.product__price
								h6 Price
								//.product__specs

							.product__tags
								.product__tag(data-ng-repeat='tag in [{}, {}, {}]')
									h5 Tag

							.product__designer
								.product__picture
									img(src='public/images/jeweller.jpg')

								.product__name
									h5 Designer Name

								.product__view
									h6 View