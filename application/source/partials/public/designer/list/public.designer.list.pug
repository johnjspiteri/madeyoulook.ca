.designers
	.designers__holder
		.designers__square(data-ng-repeat='designer in vm.designers')
			.designers__profile
				.designers__picture
					img(src='public/images/jeweller.jpg')

				.designers__detail
					.designers__row
						.designers__name
							h2(data-ng-bind='designer.name.first + " " + designer.name.last')

					.designers__row
						.designers__categories
							h5 Categories

						.designers__category
							h6 Vintage
							h6 Modern

			.designers__description
				p(data-ng-bind='designer.bio | words:23')

			.designers__products
				h5 Products
				.designers__product
					img(src='/public/images/product.jpg')
