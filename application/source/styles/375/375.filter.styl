.filter
	width 295px
	padding 22px 20px 18px 20px
	margin 20px 0 0 20px

	&__square
		margin 0 0 20px 0

	&__min
	&__max
		position absolute
		width 68px
		margin -8px 0 0 0
		background none

		span
			float left
			width 100%
			height 28px
			font-family "halyard-display", sans-serif
			//font-style italic
			font-weight 400
			font-size 16px
			line-height 26px
			color $paragraph
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius 4px
			text-align center
			text-shadow $black-shadow

	&__max
		margin -8px 0 0 372px

	&__slider
		float left
		width 295px
		padding: 0
		margin 0

		.ngrs-range-slider
			width 295px
			height 54px
			padding 6px

		.ngrs-range-slider .ngrs-runner
			width 266px
			height 18px

		.ngrs-range-slider .ngrs-join
			top 16px
			width: 265px
			height 10px

		.ngrs-range-slider .ngrs-handle
			width 40px
			height 40px

	&__title
		margin: 0 0 10px 0

		h6
			font-size 18px
			line-height 18px

	&__value
		width 100%

		select
			height 48px
			font-size 16px
			line-height 18px

		input
			width 295px
			height 48px
			padding 0 10px
			font-size 16px

	&__mask
		width 157px
		height 48px
		margin -48px 0 0 5px

		h4
			width 117px
			padding 0
			font-size 16px
			line-height 18px

		.fa-caret-down
			width 10px
			margin 0 10px 0 0
			font-size 17px
			line-height 17px

	&__tags
		width 140px
		margin -3px 0 0 115px

	&__tag
		height: 34px

		h5
			font-size 17px
			line-height 36px

		.fa-plus
			width 20px
			font-size 20px
			line-height 39px

	&__reset
		width 40px
		height 30px
		margin -1px 0 0 31px

		h5
			width 100%
			font-size 16px
			line-height 30px

			span
				width: 38px
				height 30px
				margin -1px 0 0 -10px

			.fa-close
				font-size 20px
				line-height 30px