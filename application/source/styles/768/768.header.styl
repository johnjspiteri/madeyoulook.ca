nav
	display block
	float left
	width 100%
	padding 0
	margin 14px 0 0 0

.header
	width 768px

	&__container
		margin 0

	&__content
		padding 0 0 5px 0

	&__map
		width 210px
		height 80px
		margin 0

	&__navigation
		display none

	&__logo
		width 240px
		height 70px
		margin 10px 20px 0 10px
		border-radius 0

	&__information
		display block
		float left
		width 110px
		height: 80px
		padding: 0
		margin: 0 10px 0 0
		background $secondary
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px

		h4
			float left
			width 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 400
			font-size 14px
			line-height 26px
			color $white

	&__hours
		display block
		float left
		width 144px
		height: 80px
		padding: 0
		margin 0 10px 0 0
		background $secondary
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px

		h4
			float left
			width 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 400
			font-size 14px
			line-height 26px
			color $white

	&__buttons
		text-align center
		margin 0

	&__button
		display inline-block;
		height: 34px
		padding 0 12px
		margin 0 4px
		background: $button
		border-bottom $button-border-bottom
		border-radius 4px
		z-index 99

		h2
			float left
			padding 0
			margin 0
			//font-family 'le-monde-livre-classic-byol', sans-serif
			font-family 'raleway', sans-serif
			font-weight 500
			font-size 16px
			line-height 36px
			color: $white
			text-shadow $white-shadow

	&__button.active
		background $button-active
		border-bottom $button-active-border-bottom

.sub
	display block
	position relative
	width 100%
	padding 0
	margin 0
	z-index 100

	&__container
		float left
		width 100%
		height 24px
		padding 8px 0 8px 0
		margin 0
		background $button
		border-bottom $button-border-bottom

	&__buttons
		text-align center
		margin 0

	&__button
		display inline-block;
		//height: 28px

		h6
			float left
			height: 24px
			padding 0 10px
			margin 0 4px
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 600
			font-size 18px
			line-height 25px
			color $white
			border none
			text-shadow $white-shadow

		//h6.active
		//	background $button-active
		//	background #383838
		//	border-bottom $button-active-border-bottom
		//	border-radius 4px

	&__tertiary
		display block
		float left
		width 100%
		height 44px
		background $header-tertiary
		border-top $black-border
		text-align center