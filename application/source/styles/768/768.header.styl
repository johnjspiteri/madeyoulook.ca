header
	position fixed

nav
	display block
	float left
	width 100%
	padding 0
	margin 14px 0 0 0

.header
	width 768px

	&__container
		margin 0

	&__content
		padding 0 0 6px 0

	&__map
		width 210px
		height 80px
		margin 0

	&__navigation
		display none

	&__logo
		width 240px
		height 70px
		margin 10px 20px 0 10px
		border-radius 0

	&__information
		display block
		float left
		width 110px
		height: 80px
		padding: 0
		margin: 0 10px 0 0
		background $secondary
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px

		h4
			float left
			width 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 400
			font-size 14px
			line-height 26px
			color $white

	&__hours
		display block
		float left
		width 144px
		height: 80px
		padding: 0
		margin 0 10px 0 0
		background $secondary
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px

		h4
			float left
			width 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 400
			font-size 14px
			line-height 26px
			color $white

	&__buttons
		text-align center
		margin 0

	&__button
		display inline-block;
		height: 32px
		padding 0
		margin 0 4px
		background: $button
		border-bottom $button-border-bottom
		border-radius 4px
		z-index 99

		h2
			float left
			padding 0 12px
			margin: 0
			font-size 16px
			line-height 33px
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 500
			color: $white
			text-shadow $white-shadow

	&__button.active
		background $button-active
		border-bottom $button-active-border-bottom

	&__button.hide
		display none

	&__spacer
		display block
		position relative
		width: 100%
		height: 136px
		z-index: 1

.sub
	display block
	position fixed
	width 100%
	padding 0
	margin 0
	z-index: 100

	&__container
		float left
		width 100%
		height 36px
		padding 0
		margin 0
		background $button
		border-bottom $button-border-bottom

	&__buttons
		text-align center
		margin 0

	&__button
		display inline-block;
		margin 0 12px

		h6
			float left
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 500
			font-size 16px
			line-height 37px
			color $white
			text-shadow $white-shadow

		h6.active
			color $white

	&__tertiary
		display block
		float left
		width 100%
		height 44px
		background $header-tertiary
		border-top $black-border
		text-align center