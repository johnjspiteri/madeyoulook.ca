.index
	width 768px

	&__video
		height: 360px
		margin: 0 0 28px 0

	&__squares
		width 748px
		padding 0 0 30px 0
		margin 0 0 0 20px

	&__square
		width 315px
		padding 20px 20px 20px 20px
		margin 0 12px 14px 0

		h1
			margin 0 0 8px 0
			font-size 21px
			line-height 27px

		p
		li
			font-size 16px
			line-height 24px

.search
	display block
	position absolute
	width 280px
	padding 16px 10px 12px 10px
	margin -360px 0 0 234px
	background $button
	border-bottom $button-border-bottom
	border-radius 8px
	z-index: 888

	&__title
		float left
		width 100%
		padding: 0
		margin 0 0 18px 0

		h2
			float: left
			width 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-style italic
			font-weight 600
			font-size 19px
			line-height 19px
			color: $white
			text-align: center
			text-shadow $white-shadow

	&__row
		float left
		width 100%
		margin 0
		text-align center

		h4
			float left
			width 100%
			margin 0 0 7px 0
			font-size 17px
			line-height 17px

		input
			float left
			width 260px
			height 44px
			padding 0
			margin 0 0 0 10px
			font-family 'halyard-display', sans-serif
			font-weight 400
			background $input
			border none
			border-bottom $button-border-bottom
			border-radius 4px
			font-size 23px
			line-height 44px
			text-align center

	button.submit
		float left
		width 100%
		height: 38px
		padding 0
		margin 0
		border none
		border-radius 4px
		background $button-active
		border-bottom $button-active-border-bottom

		h5
			float left
			width 100%
			padding: 0
			margin: 0
			font-size 18px
			line-height 38px
			color $white
			text-align center