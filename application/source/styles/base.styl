*
	margin: 0
	padding: 0

html
body
	height 100%
	min-height 100%
	font-size 100%
	margin 0
	padding 0
	z-index: 1
	font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
	background $background

body.locked
	overflow hidden

.wf-loading
	font-family "factoria", "mr-eaves-xl-modern", "ocr-a-std"
	visibility hidden

.wf-active
	visibility visible

img, object, embed
	max-width 100%
	height auto

object, embed
	height 100%

ul
	list-style none

.hide
	display none

.antialiased
	-webkit-font-smoothing antialiased

img
	display inline-block
	vertical-align middle
	-ms-interpolation-mode bicubic

a
	color $paragraph
	text-decoration none
	line-height inherit
	cursor: pointer

a:hover, a:focus, a.active
	cursor pointer
	outline: 0
	-moz-outline: none

a img
	border none

em, i
	font-style italic
	line-height inherit

strong, b
	font-weight bold
	line-height inherit
	color $black

small
	font-size 60%
	line-height inherit

.backdrop
	position: fixed
	width: 100%
	height 100%
	top: 0
	padding 0
	margin 0
	background: $black
	opacity: 0.5
	filter: unquote('alpha(opacity=60)')
	z-index: 888888

.loading-backdrop
	position: fixed
	width: 100%
	height 100%
	top: 0
	padding 0
	margin 0
	background: $black
	opacity: 0.7
	filter: unquote('alpha(opacity=60)')
	z-index: 88888888