.studio
	position relative
	width 320px
	margin 0 auto

	&__intro
		float left
		width 100%
		height: 220px
		padding 0
		margin 0 0 20px 0
		background #ff9
		border-bottom $secondary-border-bottom

		h1
			float: left;
			padding: 0
			margin 0 0 20px 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight: 600
			font-size 30px
			line-height 30px
			color: $black
			text-shadow $black-shadow

		p
			float left
			width 100%
			padding: 0
			margin 0
			font-size 16px
			line-height 22px
			font-family 'halyard-display', sans-serif
			font-weight: 400;
			color $paragraph
			text-shadow $black-shadow

	&__tour
		float left
		width 200px
		height 40px
		margin 20px 0 0 40px
		background $black
		border-radius 4px
		text-align center

		h4
			width 100%
			font-size 20px
			line-height 40px
			color $white

	&__rental
		float left
		width 280px
		padding 20px
		margin 0 0 20px 0
		background $white
		text-align center

		h2
			float: left
			padding: 0
			margin 0 0 20px 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight: 600
			font-size 21px
			line-height 30px
			color: $black
			text-shadow $black-shadow

		p
			float left
			width 100%
			padding: 0
			margin 0
			font-size 16px
			line-height 22px
			font-family 'halyard-display', sans-serif
			font-weight: 400;
			color $paragraph
			text-shadow $black-shadow

	&__prices
		float left
		width 320px
		margin 0 0 0 60px

	&__price
		float left
		width 200px
		padding 5px 0
		margin 0 0 20px 0
		background $black
		border-radius 4px
		text-align center

		h4
			margin 0 0 2px 0
			font-size 22px
			color $white

		h5
			display inline-block
			font-size 20px
			font-weight 400
			color $white

		p
			display inline-block
			margin 0 0 0 7px
			color $white

	&__ameneties
		float left
		width 320px
		padding: 0
		margin 0 0 30px 0
		background $white
		border-bottom $secondary-border-bottom

	&__image
		float left
		width 320px
		padding: 0
		margin: 0 0 10px 0

		img
			float left
			width: 100%
			height: 100%

	&__detail
		float left
		width 280px
		padding 10px 20px 20px 20px
		margin: 0

		h3
			float: left
			width: 100%
			padding: 0
			margin 0 0 12px 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight: 600
			font-size 21px
			line-height 30px
			color: $black
			text-align: center
			text-shadow $black-shadow

		p
			float left
			width 100%
			padding: 0
			margin 0
			font-family 'halyard-display', sans-serif
			font-weight: 400
			font-size 16px
			line-height 24px
			color $paragraph
			text-align: center
			text-shadow $black-shadow

	&__tabs
		float left
		width 300px
		padding 0 0 0 20px
		border-bottom $black-border
		background $white

	&__tab
		float left
		width 200px
		height 40px
		border $black-border
		border-bottom none
		border-radius 4px 4px 0 0
		text-align center

		h2
			font-size 23px
			line-height 40px

	&__content
		float left
		width 280px
		padding 18px 20px 10px 20px
		border-top none

		h1
			float: left
			width: 100%
			padding: 0
			margin 0 0 12px 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 600
			font-size 25px
			line-height 30px
			color: $black
			text-shadow $black-shadow

		p
			padding: 0
			margin 0 0 22px 0
			font-family 'halyard-display', sans-serif
			font-weight 400
			font-size 16px
			line-height 26px
			color: $paragraph
			text-shadow: $black-shadow

	&__large
		float left
		width 120px
		height 60px
		margin 0 14px 0 0
		background $white

	&__quote
		float left
		width 100%
		margin 0 0 10px 0
		text-align center

		h5
			float left
			width 280px
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-style italic
			font-weight 600
			font-size 21px
			line-height 32px
			color: $black
			text-shadow: $black-shadow

	&__medium
		float right
		width 100px
		height 50px
		margin 0 0 0 14px
		background $white

	&__small
		float left
		width 80px
		height 40px
		margin 0 14px 0 0
		background $white