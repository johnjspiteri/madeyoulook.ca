	&__tags
		float left
		width 130px
		padding: 0
		margin -1px 0 0 95px

	&__tag
		float left
		width 100%
		height: 34px
		padding 0
		margin 0
		color $white
		background $button
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-size 16px
			line-height 34px
			font-family: "le-monde-livre-classic-byol",serif;
			color $white
			text-shadow $white-shadow

		.fa-plus
			float left
			width 20px
			font-size 20px
			line-height 39px

	&__reset
		float left
		width 40px
		height 30px
		padding 0
		margin -1px 0 0 31px
		color $white
		background $black
		border $input-border
		border-top none
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-family: "le-monde-livre-classic-byol",serif;
			font-size 16px
			line-height 30px

			span
				display none
				float right
				width: 38px
				height 30px
				padding 0
				margin -1px 0 0 -10px

			.fa-close
				font-size 20px
				line-height 30px