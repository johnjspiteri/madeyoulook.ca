.filter
	float left
	width 260px
	padding 22px 20px 18px 20px
	margin 20px 0 0 10px
	background $secondary
	border-bottom $secondary-border-bottom
	border-radius 4px

	&__square
		float left
		width 100%
		padding 0
		margin 0 0 28px 0

	&__min
	&__max
		position absolute
		width 68px
		margin -8px 0 0 0
		background none

		span
			float left
			width 100%
			height 28px
			font-family "halyard-display", sans-serif
			font-weight 400
			font-size 16px
			line-height 26px
			color $paragraph
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius 4px
			text-align center
			text-shadow $black-shadow

	&__max
		margin -8px 0 0 190px

	&__slider
		float left
		width 260px
		padding: 0
		margin 0

		.ngrs-range-slider
			position relative
			width 260px
			height 54px
			padding 6px
			margin 0
			background $input
			border-bottom $input-border-bottom
			border-radius 4px

		.ngrs-range-slider
		.ngrs-range-slider *
			display block
			cursor default
			-webkit-box-sizing border-box
			-moz-box-sizing border-box
			box-sizing border-box
			-webkit-user-select none
			-moz-user-select none
			user-select none

		.ngrs-range-slider .ngrs-runner
			position relative
			width 245px
			height 54px
			margin 0

		.ngrs-range-slider .ngrs-join
			position absolute
			z-index 1
			width: 245px
			top 14px
			left 0
			right 100%
			height 12px
			margin 0
			background $primary

		.ngrs-range-slider .ngrs-handle
			position absolute
			z-index 2
			width 40px
			height 40px
			margin 0
			padding 0
			background $button-active
			border-bottom $button-active-border-bottom
			border-radius 4px
			cursor pointer

		.ngrs-range-slider .ngrs-value
			position absolute
			top 100%
			left 0
			padding 0
			font-size 1px
			color #999

		.ngrs-range-slider .ngrs-value.ngrs-value-max
			left auto
			right 0
			text-align right

		.ngrs-range-slider.ngrs-handle-min-down .ngrs-value-min
		.ngrs-range-slider.ngrs-handle-max-down .ngrs-value-max
			color: #333

		body.ngrs-touching
			-ms-touch-action: none

	&__title
		float left
		width 100%
		padding 0
		margin 0 0 14px 0

		h6
			float left
			width: 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 600
			font-size 18px
			line-height 18px
			color $paragraph
			color #777
			text-align center
			text-shadow $black-shadow

	&__value
		float left
		width 100%
		padding 0
		margin 0

		select
			float: left
			width 100%
			height 48px
			margin 0
			font-size 16px
			line-height 18px
			font-family "factoria", sans-serif
			font-weight 400
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius: 4px
			text-align: center

		input
			float: left
			width 240px
			height 48px
			padding 0 10px
			margin 0
			font-size 16px
			font-family "halyard-display", sans-serif
			font-weight 400
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius: 4px
			text-align: center

	&__mask
		position absolute
		width 130px
		height 48px
		padding 0
		margin -48px 0 0 5px
		background: $white
		border-radius 4px
		cursor: pointer
		outline none
		pointer-events none
		z-index 888

		h4
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 16px
			line-height 18px
			color $black
			text-align center
			text-shadow $black-shadow

		.fa-caret-down
			float right
			width 10px
			margin 0 10px 0 0
			font-size 17px
			line-height 17px

	&__tags
		float left
		width 130px
		padding: 0
		margin -3px 0 0 95px

	&__tag
		float left
		width 100%
		height: 34px
		padding 0
		margin 0
		color $white
		background $button
		border-bottom $button-border-bottom
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-size 16px
			line-height 36px
			font-family: "le-monde-livre-classic-byol",serif;
			color $white
			text-shadow $white-shadow

		.fa-plus
			float left
			width 20px
			font-size 20px
			line-height 39px

	&__reset
		float left
		width 40px
		height 30px
		padding 0
		margin -1px 0 0 31px
		color $white
		background $black
		border $input-border
		border-top none
		border-radius 0 0 4px 4px
		text-align center
		text-shadow $white-shadow

		h5
			float left
			width 100%
			font-family: "le-monde-livre-classic-byol",serif;
			font-size 16px
			line-height 30px

			span
				display none
				float right
				width: 38px
				height 30px
				padding 0
				margin -1px 0 0 -10px

			.fa-close
				font-size 20px
				line-height 30px