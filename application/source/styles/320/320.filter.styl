.filter
	float left
	width 260px
	padding 22px 20px 10px 20px
	margin 20px 0 0 10px
	background $secondary
	border-bottom $secondary-border-bottom
	border-radius 4px

	&__square
		float left
		width 260px
		padding 0
		margin 0 0 20px 0

	&__title
		float left
		width 100%
		padding 0
		margin 0 0 10px 0

		h5
			float left
			width: 100%
			padding: 0
			margin 0 0 20px 0
			font-family "halyard-display", sans-serif
			font-weight 600
			font-size 18px
			line-height 18px
			color $paragraph
			text-align center

		h6
			float left
			width: 100%
			padding: 0
			margin 0
			font-family "le-monde-livre-classic-byol", sans-serif
			font-weight 500
			font-size 17px
			line-height 17px
			color $paragraph
			color #777
			text-align center
			text-shadow $black-shadow

	&__value
		float left
		width 100%
		padding 0
		margin 0

		select
			float: left
			width 100%
			height 48px
			margin 0
			font-size 16px
			line-height 18px
			font-family "factoria", sans-serif
			font-weight 400
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius: 4px
			text-align: center

		input
			float: left
			width 240px
			height 48px
			padding 0 10px
			margin 0
			font-size 16px
			line-height 18px
			font-family "factoria", sans-serif
			font-weight 400
			background $input
			border none
			border-bottom $input-border-bottom
			border-radius: 4px
			text-align: center

	&__mask
		position absolute
		display flex
		align-items center
		width 130px
		height 48px
		padding 0
		margin -48px 0 0 5px
		background: $white
		border-radius 4px
		cursor: pointer
		outline none
		pointer-events none
		z-index 888

		h4
			float left
			width 90px
			padding 0 5px 0 15px
			margin 0
			font-weight 400
			color $black
			font-size 16px
			line-height 18px
			text-align center

		.fa-caret-down
			float right
			width 10px
			margin 0 10px 0 0
			font-size 17px
			line-height 17px

