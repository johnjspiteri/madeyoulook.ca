.products
	float left
	width 300px
	padding 0
	background none
	margin 20px 0 0 10px

	//&__holder
	//	position relative
	//	display inline-block
	//	width 295px
	//	padding 0 0 0 25px

.product
	float left
	width 300px
	padding 10px 0 0 0
	margin 0 0 12px 0
	background $secondary
	border-bottom $secondary-border-bottom
	border-radius 4px

	&__image
		float left
		width 176px
		padding 0 50px
		margin 0 0 0 10px
		background $white
		border $gold-border
		border-bottom $gold-border-bottom
		border-radius 4px

		img
			float left
			width 100%
			height 100%

	&__detail
		float left
		width 280px
		padding 10px 10px 20px 10px
		margin 0
		border-bottom $secondary-border-bottom

	&__title
		float left
		width 100%
		padding 0
		margin 8px 0 10px 0
		text-align center

		h6
			float: left
			width 100%
			padding 0
			font-family: "le-monde-livre-classic-byol", serif;
			font-weight 600
			font-size 19px
			line-height 25px
			text-align: center
			text-shadow $black-shadow

	&__description
		float left
		width 100%
		padding 0
		margin 0
		text-align center

		p
			float left
			width 100%
			padding: 0
			margin: 0
			font-size 15px
			line-height 15px
			font-weight 400
			text-align center
			text-shadow $black-shadow

	&__collection
		float left
		width 100px
		padding 0
		margin 0 0 12px 0
		text-align left

		h6
			font-size 14px
			line-height 20px

	&__price
		float right
		width 55px
		padding 0
		margin 0 0 12px 0
		text-align right

		h6
			line-height 20px

	&__tags
		float left
		width 100%
		padding 0
		margin 0

	&__tag
		float left
		padding 3px 4px
		margin 0 5px 7px 0
		background $black
		border $black-border
		border-radius 4px
		text-align center

		h5
			float left
			width 100%
			font-size 12px
			line-height 12px
			font-weight 400
			color $white

	&__unnamed
		position absolute
		margin 7px 0 0 203px
		float none
		width 50px
		height 25px
		background $accent

		h6
			line-height 25px

	&__designer
		float left
		width 100%
		width 270px
		padding 10px 15px 8px 15px
		margin: 0
		background #d8d8d8

	&__picture
		float left
		width 26px
		height 26px
		margin 0 10px 0 0
		border none

		img
			float: left
			width 100%
			height 100%
			padding: 0
			margin: 0
			border-radius 1000px

	&__name
		float left
		width 118px
		margin 0 10px 0 0
		text-align left

		h5
			float left
			width 100%
			font-family 'halyard-display', sans-serif
			font-weight 500
			font-size 14px
			line-height 15px

	&__view
		float left
		width 50px
		height 24px
		padding 0
		margin: 0
		background $button-active
		border-bottom $button-active-border-bottom
		border-radius 4px

		h6
			float: left
			text-align center
			color $white
			font-weight 400
			font-size 14px
			line-height 30px