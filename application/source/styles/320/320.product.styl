.products
	float left
	width 300px
	padding 0
	background none
	margin 0 0 0 10px

.product
	float left
	width 100%
	padding 0
	margin 0 0 12px 0
	background $secondary
	border-bottom $secondary-border-bottom
	border-radius 4px

	&__image
		float left
		width 280px
		padding 10px 10px
		margin 0
		background $secondary
		border-bottom $secondary-border-bottom
		border-radius 4px 4px 0 0

		img
			float left
			width 100%
			background $white
			border-bottom $input-border-bottom
			border-radius 4px

	&__detail
		float left
		width 100%
		padding 14px 0 10px 0
		margin 0
		background: $white
		border-bottom $secondary-border-bottom

	&__title
		float left
		width 100%
		padding 0
		margin 0 0 6px 0

		h6
			float: left
			width 100%
			padding 0
			font-family: "le-monde-livre-classic-byol", serif;
			font-weight 600
			font-size 20px
			line-height 27px
			text-align: center
			text-shadow $black-shadow

	&__description
		float left
		width 100%
		padding 0 0 8px 0
		margin 0
		text-align center

		p
			float left
			width 260px
			padding: 0 20px
			margin: 0
			font-size 14px
			line-height 23px
			font-weight 400
			color $paragraph
			text-align center
			text-shadow $black-shadow

