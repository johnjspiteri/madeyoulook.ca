	&__designer
		float left
		width 100%
		padding 4px 0 6px 0
		margin: 0
		background $secondary

	&__picture
		float left
		width 32px
		height 32px
		margin 0 0 0 15px
		border none

		img
			float: left
			width 100%
			height 100%
			padding: 0
			margin: 0
			border 1px solid #333
			border-radius 1000px

	&__name
		float left
		width 220px
		padding: 0
		margin 0
		text-align left

		h5
			float left
			width 100%
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 500
			font-size 19px
			line-height 28px
			text-align: center

	&__price
		float right
		height 28px
		padding 0 10px
		margin 0 15px 0 0
		background $button-active
		border-bottom $button-active-border-bottom
		border-radius 4px

