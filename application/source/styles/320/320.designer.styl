	float left
	width 100%
	padding: 0
	margin: 0

	&__images
		float left
		width 100%
		margin 0 0 20px 0

	&__headshot
		float left
		width 100%
		height 244px
		padding 0
		margin 0 0 10px 0
		background $white
		text-align center

		h4
			width 100%
			margin 0 0 10px 0
			font-size 20px
			line-height 244px

		img
			float left
			width 100%

