	&__information
		float left
		width 300px
		padding 20px 0 0 20px
		margin 0 0 20px 0
		background $secondary
		border-top $secondary-border

	&__name
		float left
		width 300px
		padding 0
		margin 0 0 14px 0

		h1
			float left
			padding 0
			margin 0
			width 100%
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 600
			font-size 23px
			line-height 30px

	&__quote
		position absolute
		max-width 260px
		padding 0 10px
		margin -40px 0 0 50px
		background $white
		border-radius 10px

		h3
			float left
			width 100%
			padding 0
			margin 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 600
			//font-style italic
			font-size 15px
			line-height 28px

	&__socials
		float left
		width 310px
		padding 0
		margin 0 0 15px 0

	&__social
		float left
		width 24px
		height 24px
		margin 0 7px 0 0
		background $button
		border-bottom $button-border-bottom
		border-radius 4px

		.fa-facebook
		.fa-instagram
		.fa-envelope-o
			float: left
			width: 100%
			font-size 14px
			line-height: 27px
			padding: 0
			margin 0
			color $white
			text-align: center
			text-shadow $white-shadow

	&__biography
		float left
		width 300px
		padding 0
		margin 0 0 20px 0

		h5
			float left
			width 100%
			font-family 'halyard-display', sans-serif
			font-weight 400
			font-size 15px
			line-height 22px
			color $paragraph
			text-shadow $black-shadow

	&__certificates
		float left
		width 310px
		padding 10px 0 0 10px
		margin 0 0 10px 0
		background $primary
		border-bottom $primary-border-bottom

		h1
			float left
			width 100%
			margin 0 0 10px 0
			font-family 'halyard-display', sans-serif
			font-weight 400
			font-size 20px
			line-height 20px
			color $white
			text-align: center
			text-shadow $white-shadow

	&__certificate
		float left
		width 278px
		padding 5px 10px
		margin 0 0 10px 0
		border-bottom $primary-border-bottom
		border-radius 4px
		background $white
		text-align left

		h4
			float left
			width 100%
			padding: 0
			margin: 0
			font-family 'le-monde-livre-classic-byol', sans-serif
			font-weight 600
			font-size 13px
			line-height 20px

		h5
			float left
			width 100%
			padding: 0
			margin: 0
			font-family 'halyard-display', sans-serif
			font-weight: 400
			font-size 12px
			line-height 23px

	&__items
		float left
		width 320px
		padding 0
		margin 0

	&__item
		float left
		width 320px
		height 190px
		margin 0 0 20px 0
		background $white
		border-radius 4px
		text-align center

		h4
			float left
			width 100%
			font-size 30px
			line-height 190px
