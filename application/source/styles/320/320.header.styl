header
	float left
	width 100%
	padding 0
	margin 0

.header
	float: left
	width 320px
	background: $primary
	border-bottom $black-border-bottom

	&__container
		position relative
		float none
		width 320px
		padding 0
		margin 0 auto
		z-index 900

	&__logo
		float left
		width 200px

		img
			width 100%
			height 100%

	&__navigation-icon
		float right
		width 36px
		height 36px
		margin 13px 0 0 10px
		background $accent
		border-radius 4px
		text-align center

		.fa-bars
			margin 0
			font-size 19px
			line-height 35px
			color $white

	&__search-icon
		float right
		width 36px
		height 36px
		margin 13px 0 0 0
		background $accent
		border-radius 4px
		text-align center

		.fa-search
			margin 0
			font-size 18px
			line-height 35px
			color $white

	&__information
		display none

	&__secondary
		display none

	&__tertiary
		display none

	nav
		display none

	&__tile
		float left
		padding 0 16px
		margin 0 12px 0 0
		background $black
		border-radius 4px
		text-align center

		h6
			float left
			width 100%
			font-size 16px
			color $white

	&__tile.active
		background $accent