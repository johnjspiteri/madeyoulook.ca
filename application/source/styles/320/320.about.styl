.about
	position relative
	width 320px
	padding 20px 0 0 0
	margin 0 auto

	&__title
		float left
		width 100%

		h1
			float left
			width 100%
			padding 0
			margin 0 0 20px 0
			font-size 25px
			line-height 35px
			font-family 'sofia-pro-soft', sans-serif
			font-weight 500
			color $black
			text-align center

	&__stars
		float left
		width 100%
		margin 0 0 20px 0

		h4
			float left
			width 100%
			padding 0
			margin 0
			font-size 18px
			line-height 18px
			font-family 'sofia-pro-soft', sans-serif
			font-weight 500
			color $black
			text-align center

	&__intro
		float left
		width 100%
		margin 0 0 20px 0

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-size 18px
			line-height 18px
			font-family 'sofia-pro-soft', sans-serif
			font-weight 500
			color $black
			text-align center

	&__description
		float left
		width 280px
		padding 0 20px
		margin 0 0 20px 0
		text-align center

		h5
			float left
			font-size 18px
			line-height 28px
			font-family 'sofia-pro-soft', sans-serif
			font-weight 400

	&__testimonials
		float left
		width 310px
		padding-left 10px

	&__testimonial
		float left
		width 258px
		padding 18px 20px 14px 20px
		margin 0 0 20px 0
		background $white
		border $black-border
		border-radius 4px
		text-align center

	&__row
		float left
		width 100%

		h3
			float left
			width 100%
			padding 0
			margin 0
			font-size 17px
			line-height 17px
			font-family 'sofia-pro-soft', sans-serif
			font-weight 500
			color $black
			text-align right

		p
			float left
			width 100%
			padding 0
			margin 0 0 10px 0
			font-size 16px
			line-height 26px
			font-family 'lato', sans-serif
			font-weight 400
			color $black
			text-align left